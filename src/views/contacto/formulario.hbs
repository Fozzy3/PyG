{{#each errors }}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="presentacion1">
    <div class="contacto">
        <img src="https://i.imgur.com/62s2LjP.png" title="Contacto" />
    </div>
    <div class="titulo-servicios contactotitulo">
        <h1>Contacto</h1>
    </div>
</div>

<section class="get_in_touch">
    <h1 class="title">Contactanos</h1>
    <div class="container">
        <div class="contact-form row">
            <form id="task-form" action="/send-data" method="POST">
                <div class="form-field col-lg-12">
                    <input id="name" class="input-text" type="text" name="name">
                    <label for="name" class="label">name</label>
                </div>
                <div class="form-field col-lg-12">
                    <input id="email" class="input-text" type="email" name="email">
                    <label for="email" class="label">email</label>
                </div>
                <div class="form-field col-lg-12">
                    <input id="company" class="input-text" type="text" name="company">
                    <label for="company" class="label">company</label>
                </div>
                <div class="form-field col-lg-12">
                    <input id="phone" class="input-text" type="text" name="phone">
                    <label for="phone" class="label">contact number</label>
                </div>
                <div class="form-field col-lg-12">
                    <input id="message" class="input-text" type="text" name="mess">
                    <label for="message" class="label">Message</label>
                </div>
                <div class="form-field col-lg-12">
                    <input class="submit-btn" type="submit" value="Enviar">
                </div>
            </form>
        </div>
    </div>

</section>
